@using Forum.Application.Dtos.CategoryDtos
@model List<ResultCategoryDto>
<!-- Kategoriler Başlık -->
<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">Forum Kategorileri</h1>
            <p class="text-center text-muted mb-5">
                İlgi alanınıza göre kategorileri keşfedin ve tartışmalara katılın.
            </p>
        </div>
    </div>

    <!-- Kategori Kartları -->
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="category-icon bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                                <i class="fas fa-microchip text-primary fa-2x"></i>
                            </div>
                            <h5 class="card-title mb-0">@item.Name</h5>
                        </div>
                        <p class="card-text">@item.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted">
                                <small><i class="fas fa-comments me-1"></i> @item.PostCount</small>
                            </div>
                            <a href="kategori/teknoloji.html" class="btn btn-outline-primary">Görüntüle</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
