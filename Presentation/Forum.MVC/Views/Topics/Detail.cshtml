@using Forum.Application.Dtos.PostDtos
@model GetByIdPostDto
<!-- Konu İçeriği -->
<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <!-- Konu Başlığı ve Bilgileri -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <h1 class="h2 mb-2">@Model.Title</h1>
                            <div class="text-muted">
                                <small>
                                    <i class="fas fa-user me-1"></i> @Model.User.Username
                                    <i class="fas fa-clock ms-3 me-1"></i> @Model.CreatedAtHumanize
                                    <i class="fas fa-folder ms-3 me-1"></i> @Model.Category.Name
                                </small>
                            </div>
                        </div>
                        <div class="text-end">
                            @* buraya giruntulenme gelecek *@
                            <div class="badge bg-primary mb-2">1.2K Görüntülenme</div>
                            <div class="text-muted">
                                <small><i class="fas fa-comments me-1"></i> @Model.Comments.Count</small>
                            </div>
                        </div>
                    </div>

                    <!-- Konu İçeriği -->
                    <div class="topic-content mb-4">
                        <p>@Model.Content</p>

                        @* <h3>Yapay Zekanın Avantajları</h3>
                        <ul>
                            <li>Otomasyon ve verimlilik artışı</li>
                            <li>Yeni iş alanları ve fırsatlar</li>
                            <li>Sağlık ve eğitim alanında gelişmeler</li>
                            <li>Günlük yaşamı kolaylaştıran uygulamalar</li>
                        </ul>

                        <h3>Potansiyel Riskler</h3>
                        <ul>
                            <li>İş kayıpları ve ekonomik değişimler</li>
                            <li>Gizlilik ve güvenlik endişeleri</li>
                            <li>Etik sorunlar ve kontrol mekanizmaları</li>
                            <li>Toplumsal eşitsizliklerin artması</li>
                        </ul>

                        <p>Bu konuda sizin görüşleriniz neler? Yapay zeka teknolojilerinin geleceğimizi nasıl etkileyeceğini düşünüyorsunuz?</p> *@
                    </div>

                    <!-- Etiketler -->
                    <div class="tags mb-4">
                        <span class="badge bg-primary me-2">#yapayzeka</span>
                        <span class="badge bg-info me-2">#teknoloji</span>
                        <span class="badge bg-success">#gelecek</span>
                    </div>

                    <!-- Paylaşım Butonları -->
                    <div class="share-buttons mb-4">
                        <button class="btn btn-outline-primary me-2">
                            <i class="fas fa-share-alt me-1"></i> Paylaş
                        </button>
                        <button class="btn btn-outline-success me-2">
                            <i class="fas fa-bookmark me-1"></i> Kaydet
                        </button>
                        <button class="btn btn-outline-danger">
                            <i class="fas fa-flag me-1"></i> Raporla
                        </button>
                    </div>
                </div>
            </div>
            @await Component.InvokeAsync("TopicDetailComments", new { postId = Model.Id })
            </div>

        <!-- Yan Panel -->
        <div class="col-lg-4">
           
            @await Component.InvokeAsync("TopicDetailSampleTopics", new { categoryId = Model.CategoryId })
            @await Component.InvokeAsync("TopicDetailBestUsers")
            

            <!-- Popüler Etiketler -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Popüler Etiketler</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2">
                        <a href="#" class="btn btn-sm btn-outline-primary">#yapayzeka</a>
                        <a href="#" class="btn btn-sm btn-outline-success">#iklim</a>
                        <a href="#" class="btn btn-sm btn-outline-info">#sanat</a>
                        <a href="#" class="btn btn-sm btn-outline-warning">#teknoloji</a>
                        <a href="#" class="btn btn-sm btn-outline-danger">#spor</a>
                        <a href="#" class="btn btn-sm btn-outline-secondary">#egitim</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
