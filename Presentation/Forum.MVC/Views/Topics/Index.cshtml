@using Forum.Application.Dtos.PostDtos
@model List<ResultPostDto>

<!-- Popüler Konular Başlık -->
<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">Popüler Konular</h1>
            <p class="text-center text-muted mb-5">
                En çok okunan ve tartışılan konuları keşfedin.
            </p>
        </div>
    </div>

    <!-- Filtreler -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text"><i class="fas fa-search"></i></span>
                <input type="text" class="form-control" placeholder="Konu ara..." id="searchInput">
            </div>
        </div>
        <div class="col-md-6">
            <div class="d-flex justify-content-md-end">
                <select class="form-select w-auto me-2" id="categoryFilter">
                    <option value="">Tüm Kategoriler</option>
                    <option value="teknoloji">Teknoloji</option>
                    <option value="bilim">Bilim</option>
                    <option value="sanat">Sanat</option>
                    <option value="spor">Spor</option>
                    <option value="egitim">Eğitim</option>
                    <option value="yasam">Yaşam</option>
                </select>
                <select class="form-select w-auto" id="sortFilter">
                    <option value="popular">En Popüler</option>
                    <option value="recent">En Yeni</option>
                    <option value="comments">En Çok Yorum</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Konu Listesi -->
    <div class="row">
        <div class="col-lg-8">
            <!-- Konu 1 -->
            @foreach (var item in Model)
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h5 class="card-title mb-1">
                                    <a href="/topics/detail?id=@item.Id" class="text-decoration-none">@item.Title</a>
                                </h5>
                                <p class="card-text text-muted mb-2">
                                    <small>
                                        <i class="fas fa-user me-1"></i> @item.User.Username
                                        <i class="fas fa-clock ms-3 me-1"></i> @item.CreatedAt
                                        <i class="fas fa-folder ms-3 me-1"></i> @item.Category.Name
                                    </small>
                                </p>
                                <p class="card-text">@item.Content</p>
                            </div>
                            <div class="text-end">
                                <div class="badge bg-primary mb-2">1.2K Görüntülenme</div>
                                <div class="text-muted">
                                    <small><i class="fas fa-comments me-1"></i> 45 Yorum</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
           

            <!-- Konu 2 -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h5 class="card-title mb-1">
                                <a href="konu/2.html" class="text-decoration-none">İklim Değişikliği ve Sürdürülebilirlik</a>
                            </h5>
                            <p class="card-text text-muted mb-2">
                                <small>
                                    <i class="fas fa-user me-1"></i> Ayşe Demir
                                    <i class="fas fa-clock ms-3 me-1"></i> 5 saat önce
                                    <i class="fas fa-folder ms-3 me-1"></i> Bilim
                                </small>
                            </p>
                            <p class="card-text">İklim değişikliği ile mücadelede bireysel ve toplumsal sorumluluklarımız ve sürdürülebilir yaşam pratikleri.</p>
                        </div>
                        <div class="text-end">
                            <div class="badge bg-primary mb-2">980 Görüntülenme</div>
                            <div class="text-muted">
                                <small><i class="fas fa-comments me-1"></i> 38 Yorum</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Konu 3 -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h5 class="card-title mb-1">
                                <a href="konu/3.html" class="text-decoration-none">Modern Sanatın Yorumlanması</a>
                            </h5>
                            <p class="card-text text-muted mb-2">
                                <small>
                                    <i class="fas fa-user me-1"></i> Mehmet Kaya
                                    <i class="fas fa-clock ms-3 me-1"></i> 1 gün önce
                                    <i class="fas fa-folder ms-3 me-1"></i> Sanat
                                </small>
                            </p>
                            <p class="card-text">Modern sanat eserlerinin yorumlanması ve anlaşılması konusunda farklı yaklaşımlar ve tartışmalar.</p>
                        </div>
                        <div class="text-end">
                            <div class="badge bg-primary mb-2">850 Görüntülenme</div>
                            <div class="text-muted">
                                <small><i class="fas fa-comments me-1"></i> 32 Yorum</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sayfalama -->
            <nav aria-label="Sayfalama">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1"><i class="fas fa-chevron-left"></i></a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>
                    </li>
                </ul>
            </nav>
        </div>

        <!-- Yan Panel -->
        <div class="col-lg-4">
            <!-- En Aktif Kullanıcılar -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">En Aktif Kullanıcılar</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="/users/index?id=1" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <img src="https://via.placeholder.com/32" class="rounded-circle me-2" alt="Kullanıcı">
                                Ahmet Yılmaz
                            </div>
                            <span class="badge bg-primary rounded-pill">1.2K</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <img src="https://via.placeholder.com/32" class="rounded-circle me-2" alt="Kullanıcı">
                                Ayşe Demir
                            </div>
                            <span class="badge bg-primary rounded-pill">980</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <img src="https://via.placeholder.com/32" class="rounded-circle me-2" alt="Kullanıcı">
                                Mehmet Kaya
                            </div>
                            <span class="badge bg-primary rounded-pill">850</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Popüler Etiketler -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Popüler Etiketler</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2">
                        <a href="#" class="btn btn-sm btn-outline-primary">#yapayzeka</a>
                        <a href="#" class="btn btn-sm btn-outline-success">#iklim</a>
                        <a href="#" class="btn btn-sm btn-outline-info">#sanat</a>
                        <a href="#" class="btn btn-sm btn-outline-warning">#teknoloji</a>
                        <a href="#" class="btn btn-sm btn-outline-danger">#spor</a>
                        <a href="#" class="btn btn-sm btn-outline-secondary">#egitim</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
