@using Forum.Application.Dtos.PostDtos
@model List<DetailPostByCategoryDto>

<!-- Benzer Konular -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">Benzer Konular</h5>
    </div>
    <div class="card-body">
        <div class="list-group list-group-flush">

        @foreach(var item in Model)
        {
                <a href="2.html" class="list-group-item list-group-item-action">
                    <h6 class="mb-1">@item.Title</h6>
                    <small class="text-muted">@item.CreatedAtHumanize</small>
                </a>
        }
            </div>

    </div>
</div>