@using Forum.Application.Dtos.CommentDtos
 @model List<ResultCommentsComponentDto>

<!-- Yorumlar -->
<div class="card shadow-sm">
    <div class="card-header bg-white border-bottom-0">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="fas fa-comments me-2 text-primary"></i>Yorumlar (45)
            </h5>
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="fas fa-sort me-1"></i>Sırala
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">En Yeni</a></li>
                    <li><a class="dropdown-item" href="#">En Popüler</a></li>
                    <li><a class="dropdown-item" href="#">En Çok Yanıt Alan</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="card-body">
        <!-- Yorum Formu -->
        <form class="mb-4 comment-form">
            <div class="d-flex align-items-start">
                <img src="~/forum/images/avatar.png" class="rounded-circle me-3" alt="Profil" width="50px" height="50px">
                <div class="flex-grow-1">
                    <textarea class="form-control" rows="3" placeholder="Düşüncelerinizi paylaşın..."></textarea>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-image"></i>
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-link"></i>
                            </button>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane me-1"></i>Gönder
                        </button>
                    </div>
                </div>
            </div>
        </form>

        <!-- Yorum Listesi -->
        <div class="comments-section">
            <!-- Ana Yorum 1 -->
            @if( Model != null){
            @foreach (var item in Model)
            {
                <div class="comment mb-4">
                    <div class="d-flex">
                            <img src="~/forum/images/avatar.png" class="rounded-circle me-3" alt="Kullanıcı" width="50px" height="50px">
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <h6 class="mb-0">@item.User.Username</h6>
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>@item.CreatedAtHumanize
                                    </small>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-link text-muted" type="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#"><i class="fas fa-flag me-2"></i>Raporla</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="fas fa-ban me-2"></i>Engelle</a></li>
                                    </ul>
                                </div>
                            </div>
                            <p class="mb-2">@item.Content</p>
                            <div class="d-flex align-items-center gap-3">
                                <button class="btn btn-sm btn-link text-muted">
                                    <i class="fas fa-thumbs-up me-1"></i>Beğen (12)
                                </button>
                                <button class="btn btn-sm btn-link text-muted">
                                    <i class="fas fa-reply me-1"></i>Yanıtla
                                </button>
                                <button class="btn btn-sm btn-link text-muted">
                                    <i class="fas fa-share me-1"></i>Paylaş
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Yanıt 1 -->
                    @foreach (var item1 in item.SubComments)
                    {
                        <div class="comment-reply ms-5 mt-3">
                            <div class="d-flex">
                                    <img src="~/forum/images/avatar.png" class="rounded-circle me-3" alt="Kullanıcı" width="50px" height="50px">
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div>
                                            <h6 class="mb-0">@item1.User.Username</h6>
                                            <small class="text-muted">
                                                <i class="fas fa-clock me-1"></i>@item1.CreatedAtHumanize
                                            </small>
                                        </div>
                                    </div>
                                    <p class="mb-2">@item1.Content</p>
                                    <div class="d-flex align-items-center gap-3">
                                        <button class="btn btn-sm btn-link text-muted">
                                            <i class="fas fa-thumbs-up me-1"></i>Beğen (5)
                                        </button>
                                        <button class="btn btn-sm btn-link text-muted">
                                            <i class="fas fa-reply me-1"></i>Yanıtla
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                  
                </div>
                }
            }
            

        </div>
    </div>
</div>
