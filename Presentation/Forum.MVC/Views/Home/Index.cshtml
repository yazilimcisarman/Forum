@using Forum.Application.Dtos.PostDtos
@{
    ViewData["Title"] = "Home Page";
}
@model List<ResultPostDto>

<!-- Hero Section -->
<div class="hero-section text-center py-5 bg-light">
    <div class="container">
        <h1 class="display-4 mb-4">Forum Sitesine Hoş Geldiniz</h1>
        <p class="lead mb-4">Düşüncelerinizi paylaşın, tartışın ve öğrenin</p>
        <a href="/accounts/register" class="btn btn-primary btn-lg">Hemen Üye Ol</a>
    </div>
</div>

<!-- Son Konular Section -->
<div class="latest-topics-section py-5">
    <div class="container">
        <h2 class="text-center mb-4">Son Konular</h2>
        <div class="row">
            <div class="col-lg-8 mx-auto"> 
                <div class="list-group">
                    @foreach (var item in Model)
                    { 
                        <a href="/topics/detail?id=@item.Id" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">@item.Title</h5>
                                <small>@item.CreatedAtHumanize</small>
                            </div>
                            <p class="mb-1">@item.Content</p>
                            <small>@item.Category.Name kategorisi</small>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@await Component.InvokeAsync("​​​​HomePagePopularCategories")
