@using Microsoft.AspNetCore.Mvc.ModelBinding
@using Forum.Application.Dtos.IdentityDtos
@model LoginDto
<div class="tt-loginpages-wrapper">
    <div class="tt-loginpages">
        <a href="/home" class="tt-block-title">
            <img src="~/forum/images/forumsarman.png" alt="" width="50px" height="50px">
            <div class="tt-title">
                Yazılımcı Sarman Forum'una hoşgeldiniz.
            </div>
            <div class="tt-description">
                Topluluğun gerçek gücünü ortaya çıkarmak için hesabınıza giriş yapın.
            </div>
        </a>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState[string.Empty]?.Errors ?? Enumerable.Empty<ModelError>())
                {
                    <p style="color:red">@error.ErrorMessage</p>
                }
            </div>
        }
        <form class="form-default" method="post" action="/account/sendlogin">
