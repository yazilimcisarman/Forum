<script>
  function validateForm() {
  const title = document.getElementById("inputTopicTitle").value.trim();
      const content = document.getElementById("contenttext").value.trim();
          if (title.length < 5) {
    toastr.error("Başlık en az 5 karakter olmalıdır.", "Hata");
    return false;
  }

      if (content.length < 10) { 
    toastr.error("Konu en az 10 karakter olmalıdır.", "Hata");
    return false;
  }
    const categoryElement = document.getElementById("categoryId");
    if (!categoryElement || categoryElement.value === "0") {
      toastr.error("Lütfen bir kategori seçiniz.", "Hata");
      return false;
    }

      return true;
}
</script>