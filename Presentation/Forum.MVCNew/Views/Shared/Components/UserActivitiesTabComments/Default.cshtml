@using Forum.Application.Dtos.CommentDtos

@model List<ResultCommentDto>

<div class="tab-pane tt-indent-none" id="tt-tab-02" role="tabpanel">
    <div class="tt-topic-list">
        <div class="tt-list-header">
            <div class="tt-col-topic">Konu</div>
            <div class="tt-col-category">Post</div>
            @* <div class="tt-col-value hide-mobile">Beğeni</div> *@
            <div class="tt-col-value">###</div>
        </div>
         @if (Model != null)
        {
        @foreach (var item in Model)
        {
            <div class="tt-item">
                <div class="tt-col-avatar">
                    <svg class="tt-icon">
                        <use xlink:href="@($"#icon-ava-{item.User.Name.Substring(0,1).ToLower()}")"></use>
                    </svg>
                </div>
                <div class="tt-col-description">
                    <h6 class="tt-title">
                        <a href="#">
                            @* <svg class="tt-icon">
                                <use xlink:href="#icon-pinned"></use>
                            </svg> *@
                            @item.Content
                        </a>
                    </h6>
                    <div class="row align-items-center no-gutters">
                        <div class="col-11">
                            <ul class="tt-list-badge">
                                <li class="show-mobile"><a href="#"><span class="tt-color01 tt-badge">posttag</span></a></li>
                                @* <li><a href="#"><span class="tt-badge">contests</span></a></li>
                                <li><a href="#"><span class="tt-badge">authors</span></a></li> *@
                            </ul>
                        </div>
                        <div class="col-1 ml-auto show-mobile">
                            <div class="tt-value">1h</div>
                        </div>
                    </div>
                </div>
                <div class="tt-col-category">
                    <a href="/topic/detail?topicsId=@item.PostId"><span class="tt-color01 tt-badge">Post</span></a>
            </div>
                @* <div class="tt-col-value hide-mobile">985</div> *@
                <div class="tt-col-value hide-mobile">@item.CreatedAtHumanize</div>
            </div>
        }
            <div class="tt-row-btn">
                <button type="button" class="btn-icon js-topiclist-showmore">
                    <svg class="tt-icon">
                        <use xlink:href="#icon-load_lore_icon"></use>
                    </svg>
                </button>
            </div>
        }
        else
        {
            <div class="tt-item">
                <div class="tt-col-description">
                    <h6 class="tt-title">Henüz yorum bulunmamaktadır.</h6>
                </div>
            </div>
        }
       
    </div>
</div>